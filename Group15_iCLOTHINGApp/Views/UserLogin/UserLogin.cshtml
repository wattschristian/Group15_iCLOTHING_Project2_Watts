@model Group15_iCLOTHINGApp.Models.UserPassword
@{ 
    ViewBag.Title = "Login";
}
<style>
.custom-form {
    padding: 20px;
    font-family: Arial, sans-serif; /* Match the font-family of the navbar */
}

.custom-form .custom-form-group {
    margin-bottom: 15px;
}

.custom-form .custom-control-label {
    font-weight: bold;
}

.custom-form .custom-form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
}

.custom-form input[type="submit"] {
    padding: 5px 10px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-bottom: 5px;
    background-color: rgb(0, 136, 180);
    color: #fff;
}

.custom-form input[type="submit"]:hover {
    background-color: #005b7f;
}

.text-danger {
    color: red;
}
</style>
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Validate", "UserLogin"))
{
    @Html.AntiForgeryToken()
    <div class="custom-form">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="custom-form-group">
            @Html.Label("User Name", htmlAttributes: new { @class = "custom-control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.userAccountName, new { htmlAttributes = new { @class = "custom-form-control" } })
                @Html.ValidationMessageFor(model => model.userAccountName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="custom-form-group">
            @Html.Label("Password", htmlAttributes: new { @class = "custom-control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.userEncryptedPassword, new { htmlAttributes = new { @class = "custom-form-control", @type = "password" } })
                @Html.ValidationMessageFor(model => model.userEncryptedPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="custom-form-group">
            <br />
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-primary" />
                <br />
                <p>@Html.ActionLink("Register", "Create", "UserPassword", null, new { @class = "btn btn-secondary" })</p>
                <p class="text-danger">@ViewBag.ErrorMessage</p>
            </div>
        </div>
    </div>
}
