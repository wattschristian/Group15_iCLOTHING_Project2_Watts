@model IEnumerable<Group15_iCLOTHINGApp.Models.Product>
@{
    ViewBag.Title = "Home Page";
}
@if (Session["UserID"] != null)
{
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}
else if (Session["AdminID"] != null)
{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
else
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<style>
    /* Style for the body */
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 20px;
    }

    /* Style for the row */
    .row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 30px;
    }

    /* Style for the columns */
    .col-sm-4 {
        flex-basis: calc(33.33% - 20px); /* Adjusted width */
        margin-right: 20px;
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        cursor: pointer;
        display: flex; /* Added to align content vertically */
        flex-direction: column; /* Added to align content vertically */
    }

        .col-sm-4:last-child {
            margin-right: 0; /* Remove margin for the last column */
        }

        .col-sm-4:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        /* Style for the images */
        .col-sm-4 img {
            width: 100%;
            height: auto;
            border-radius: 8px 8px 0 0;
            max-height: 150px; /* Reduced image height */
            object-fit: cover; /* Maintain aspect ratio */
        }

        /* Style for the content inside each box */
        .col-sm-4 .content {
            padding: 20px;
            margin-top: auto; /* Align content at the bottom */
        }

        .col-sm-4 h3 {
            margin: 0;
            font-size: 20px; /* Increased font size */
            color: #333;
            text-align: center;
            margin-bottom: 10px;
            font-weight: bold; /* Added font weight */
        }

        .col-sm-4 p {
            font-size: 16px; /* Increased font size */
            line-height: 1.6; /* Increased line height for better readability */
            color: #666;
            text-align: center;
            margin-bottom: 0; /* Remove default margin */
        }

        /* Style for the links */
        .col-sm-4 a {
            display: block;
            text-decoration: none;
            color: #007bff;
            transition: color 0.3s ease;
        }

            .col-sm-4 a:hover {
                color: #0056b3;
            }
    /* Style for the welcome banner */
    .welcome-banner {
        background-image: url(../../Content/Images/images.jpg);
        background-size: cover;
        background-position: center;
        color: #fff;
        padding: 100px 0;
        text-align: center;
    }

        .welcome-banner h1 {
            font-size: 48px;
            margin-bottom: 20px;
        }

        .welcome-banner p {
            font-size: 20px;
            margin-bottom: 30px;
        }

        .welcome-banner .btn {
            font-size: 18px;
            padding: 12px 24px;
            border-radius: 25px;
        }

    /* Style for the home page content */
    .home-content {
        background-color: #f9f9f9;
        padding: 50px 0;
        text-align: center;
    }

        .home-content h2 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        .home-content p {
            font-size: 20px;
            margin-bottom: 30px;
        }

    /* Style for the link cards */
    .link-card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        text-align: center;
        transition: all 0.3s ease;
    }

        .link-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .link-card img {
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .link-card h3 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .link-card p {
            font-size: 18px;
            color: #666;
        }


</style>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>

<body>
    <!-- Welcome Banner -->
    <div class="welcome-banner">
        <div class="container">
            <h1>Welcome to Our E-Commerce Store!</h1>
            <p>Discover the latest trends and shop for your favorite brands.</p>
            <a href="#explore" class="btn btn-primary">Explore Now</a>
        </div>
    </div>

    <!-- Home Page Content -->
    <div id="explore" class="home-content">
        <div class="container">
            <h2>Explore Our Categories</h2>
            <p>Check out our wide range of products across different categories.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <img src="~/Content/Images/brands.png" alt="..." />
            <h3><a href="~/Brand/Index">Brands</a></h3>
        </div>
        <div class="col-sm-4">
            <img src="~/Content/Images/categories.jpg" alt="..." />
            <h3><a href="~/Category/Index">Categories</a></h3>
        </div>
        <div class="col-sm-4">
            <img src="~/Content/Images/departments.jpg" alt="..." />
            <h3><a href="~/Department/Index">Departments</a></h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <img src="~/Content/Images/about.jpg" alt="..." />
            <h3><a href="~/Home/About">About</a></h3>
        </div>
        <div class="col-sm-4">
            <img src="~/Content/Images/contact.png" alt="..." />
            <h3><a href="~/Home/Contact">Contact Us</a></h3>
        </div>
        <div class="col-sm-4">
            <img src="~/Content/Images/feedback.png" alt="..." />
            <h3><a href="~/UserComments/Index">Feedback</a></h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <img src="~/Content/Images/search.png" alt="..." />
            <h3><a href="~/UserQuery/Index">Search</a></h3>
        </div>
        <div class="col-sm-4">
            <img src="~/Content/Images/shoppingcart.png" alt="..." />
            <h3><a href="~/ShoppingCart/Index">Cart</a></h3>
        </div>
        <div class="col-sm-4">
            <img src="~/Content/Images/login.png" alt="..." />
            <h3><a href="~/UserLogin/UserLogin">Log In/Register</a></h3>
        </div>
    </div>
</body>
</html>
