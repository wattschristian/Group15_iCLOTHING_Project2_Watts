@model IEnumerable<Group15_iCLOTHINGApp.Models.Department>

@{
    ViewBag.Title = "Departments";
}

@if (Session["UserID"] != null)
{
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}
else
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Stylesheets/TableView.css">
</head>
<body>
    <h2>@ViewBag.Title</h2>
    <hr />
    <div class="custom-container">
        <table class="table" cellspacing="5">
            <tr>
                <th>
                    Department
                </th>
                <th>
                    Description
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.departmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.departmentDescription)
                    </td>
                    <td>
                        @Html.ActionLink("View", "Filter", "Product", new { departmentID = item.departmentID }, new { @class = "nav-link" })
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
