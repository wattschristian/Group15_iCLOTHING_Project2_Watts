@{
    ViewBag.Title = "Maintain Catalog";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="~/Stylesheets/TableView.css">
<h2>@ViewBag.Title</h2>
<hr /><br />
<div class="custom-container">
    <h4>Products</h4>
    <p>
        @Html.ActionLink("Create New", "Create", "Product", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>In Stock</th>
            <th></th>
        </tr>
        @foreach (var item in ViewBag.Products)
        {
            <tr>
                <td>
                    <p>@item.productName</p>
                </td>
                <td>
                    <p>@item.productDescription</p>
                </td>
                <td>
                    <p>@item.productPrice</p>
                </td>
                <td>
                    <p>@item.productQty</p>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Product", new { id = item.productID }, null) |
                    @Html.ActionLink("Details", "Details", "Product", new { id = item.productID }, null) |
                    @Html.ActionLink("Delete", "Delete", "Product", new { id = item.productID }, null)
                </td>
            </tr>
        }
    </table>
    <br /><br />
    <h4>Categories</h4>
    <p>
        @Html.ActionLink("Create New", "Create", "Category", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
        @foreach (var item in ViewBag.Categories)
        {
            <tr>
                <td>
                    <p>@item.categoryName</p>
                </td>
                <td>
                    <p>@item.categoryDescription</p>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Category", new { id = item.categoryID }, null) |
                    @Html.ActionLink("Details", "Details", "Category", new { id = item.categoryID }, null)
                </td>
            </tr>
        }
    </table>
    <br /><br />
    <h4>Brands</h4>
    <p>
        @Html.ActionLink("Create New", "Create", "Brand", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
        @foreach (var item in ViewBag.Brands)
        {
            <tr>
                <td>
                    <p>@item.brandName</p>
                </td>
                <td>
                    <p>@item.brandDescription</p>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Brand", new { id = item.brandID }, null) |
                    @Html.ActionLink("Details", "Details", "Brand", new { id = item.brandID }, null)
                </td>
            </tr>
        }

    </table>
</div>
